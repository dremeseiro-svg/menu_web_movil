<script>
    const galleryData = [
        { src: "image1.jpg", title: "Visión I", text: "Hielo en el ojo," },
        { src: "image2.jpg", title: "Visión II", text: "la luz busca su centro," },
        { src: "image3.jpg", title: "Visión III", text: "el sueño es blanco." },
        { src: "image4.jpg", title: "Visión IV", text: "Hielo en el ojo, la luz busca su centro, el sueño es blanco." }
    ];

    let currentIndex = 0;
    function openVisor(index) {
        currentIndex = index;
        updateVisor();
        document.getElementById('visor-overlay').style.display = 'flex';
        document.body.style.overflow = 'hidden';
    }
    function closeVisor() { 
        document.getElementById('visor-overlay').style.display = 'none'; 
        document.body.style.overflow = 'auto';
    }
    function changeImg(step) {
        currentIndex = (currentIndex + step + galleryData.length) % galleryData.length;
        updateVisor();
    }
    function updateVisor() {
        const data = galleryData[currentIndex];
        document.getElementById('visor-img').src = data.src;
        document.getElementById('visor-title').innerText = data.title;
        document.getElementById('visor-text').innerText = data.text;
    }
    document.addEventListener('keydown', (e) => {
        if (e.key === "Escape") closeVisor();
        if (e.key === "ArrowLeft") changeImg(-1);
        if (e.key === "ArrowRight") changeImg(1);
    });
</script>
</body>
